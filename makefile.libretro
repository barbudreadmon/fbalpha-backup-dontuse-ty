	$(CXX) $(CXXFLAGS) -std=gnu++0x $(INCFLAGS) -c $^ -o $@

src/cpu/adsp2100_intf.o: src/cpu/adsp2100_intf.cpp
	$(CXX) $(CXXFLAGS) -std=gnu++0x $(INCFLAGS) -c $^ -o $@

